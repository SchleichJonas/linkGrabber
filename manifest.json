{
    "manifest_version": 2,
    "name": "linkGrabber",
    "version": "1.0",
    "description": "Grabs links containing 'magnet' from the current tab.",
    "permissions": [
        "activeTab",
        "storage",
        "https://api.real-debrid.com/",
        "https://nyaa.si/*", 
        "activeTab",
        "scripting"
    ],
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon-16.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
      }
    },
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "icons": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "browser_specific_settings": {
    "gecko": {
      "id": "jonas.schleich@extension.com"
    }
  },
  "host_permissions": [
    "https://nyaa.si/*"
  ]
}
  